<Window x:Class="EyeZen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EyeZen.Utilities"
        Title="{x:Static local:LocalizationManager.AppTitle}" 
        Height="350" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{x:Static local:LocalizationManager.AppTitle}" 
                       FontSize="20" Margin="0,0,0,20"/>
            <Button x:Name="StartButton" Content="{x:Static local:LocalizationManager.StartButton}" 
                    Click="StartReminders_Click" Width="150" Margin="0,10"/>
            <Button x:Name="StopButton" Content="{x:Static local:LocalizationManager.StopButton}" 
                    Click="StopReminders_Click" Width="150" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>